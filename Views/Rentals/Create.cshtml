@model TravelProject.Models.Rentals

@{
    ViewData["Title"] = "Create";
}
<div class="row text-center">
    <h1 class="h5">Create</h1>

    <h2 class="h1">Rentals</h2>
    <hr />
</div>
    <div class="row">
        <div class="col"></div>
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Rentalname" class="control-label"></label>
                    <input asp-for="Rentalname" class="form-control" placeholder="Enter Hotel/Villa name here"/>
                    <span asp-validation-for="Rentalname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Party" class="control-label"></label>
                    <input asp-for="Party" class="form-control" placeholder="e.g. 4 (number of people)"/>
                    <span asp-validation-for="Party" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" placeholder="e.g. Jaco"/>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fee" class="control-label"></label>
                    <input asp-for="Fee" class="form-control" placeholder="Price (USD) for each night"/>
                    <span asp-validation-for="Fee" class="text-danger"></span>
                </div>
                <div class="form-group my-1">
                    <input type="submit" value="Create" class="btn btn-primary my-1" />
                    <a asp-action="Index" class="btn btn-light my-2">Back to List</a>
                </div>
                
            </form>
        </div>
        <div class="col"></div>
    </div>

    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
