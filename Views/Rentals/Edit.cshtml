@model TravelProject.Models.Rentals

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Rentals</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRentals" />
            <div class="form-group">
                <label asp-for="Rentalname" class="control-label"></label>
                <input asp-for="Rentalname" class="form-control" />
                <span asp-validation-for="Rentalname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Party" class="control-label"></label>
                <input asp-for="Party" class="form-control" />
                <span asp-validation-for="Party" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fee" class="control-label"></label>
                <input asp-for="Fee" class="form-control" />
                <span asp-validation-for="Fee" class="text-danger"></span>
            </div>
               <div class="form-group my-1">
                    <input type="submit" value="Update" class="btn btn-primary my-1" />
                    <a asp-action="Index" class="btn btn-light my-2">Back to List</a>
                </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
